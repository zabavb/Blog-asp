@using Blog.Models.ViewModels

@model CommentModel

<h2>Leave comment</h2>
<form asp-controller="Post" asp-action="CreateComment">
    <div class="validation" style="color: red" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="mb-3 form-group">
            <label class="form-label" asp-for="Text"></label>
            <input class="form-control" asp-for="Text" />
            <span style="color: red" asp-validation-for="Text"></span>
        </div>

        <div class="form-group">
            <button type="submit" name="postId" class="btn btn-outline-dark" value="@Model.PostId">Leave</button>
        </div>
    </div>
</form>