@using Blog.Models.ViewModels

@model PostModel

<h2>Create post</h2>
<form asp-controller="Post" asp-action="CreatePost">
    <div class="validation" style="color: red" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="mb-3 form-group">
            <label class="form-label" asp-for="Title"></label>
            <input class="form-control" asp-for="Title" />
            <span style="color: red" asp-validation-for="Title"></span>
        </div>
        <div class="mb-3 form-group">
            <label class="form-label" asp-for="Annotation"></label>
            <input class="form-control" asp-for="Annotation" />
            <span style="color: red" asp-validation-for="Annotation"></span>
        </div>
        <div class="mb-3 form-group">
            <label class="form-label" asp-for="Content"></label>
            <input class="form-control" asp-for="Content" />
            <span style="color: red" asp-validation-for="Content"></span>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-outline-dark" value="Post" />
        </div>
    </div>
</form>